<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.airsaid.accountbook">

    <!-- 基础模块（必须加入以下声明）START -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 基础模块 END -->

    <!--读取外部存储-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--相机拍照-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--读取日志-->
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_tmxj"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <meta-data
            android:name="LEANCLOUD_APPID"
            android:value="${leancloud_appid}" />
        <meta-data
            android:name="LEANCLOUD_APPKEY"
            android:value="${leancloud_appkey}" />
        <meta-data
            android:name="BUGLY_APPID"
            android:value="${bugly_appid}" />

        <activity
            android:name="com.tencent.bugly.beta.ui.BetaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|locale"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent" />
        <!--用户反馈组件-->
        <activity
            android:name="com.avos.avoscloud.feedback.ThreadActivity"
            android:screenOrientation="portrait" />
        <!--主页-->
        <activity
            android:name=".mvp.main.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <!--登录-->
        <activity
            android:name=".mvp.login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.GrayControl" />
        <!--注册-->
        <activity
            android:name=".mvp.register.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.GrayControl" />
        <!--记账-->
        <activity
            android:name=".mvp.account.AccountActivity"
            android:screenOrientation="portrait" />
        <!--个人资料-->
        <activity
            android:name=".mvp.user.UserInfoActivity"
            android:screenOrientation="portrait" />
        <!--帐薄-->
        <activity
            android:name=".mvp.books.AccountBooksActivity"
            android:screenOrientation="portrait" />
        <!--找回密码-->
        <activity
            android:name=".ui.activity.ForgetPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.GrayControl" />
        <!--设置-->
        <activity
            android:name=".ui.activity.SettingActivity"
            android:screenOrientation="portrait" />
        <!--关于我们-->
        <activity
            android:name=".ui.activity.AboutPageActivity"
            android:screenOrientation="portrait" />
        <!--邀请好友-->
        <activity
            android:name=".ui.activity.AddShareUserActivity"
            android:screenOrientation="portrait" />
        <!--添加帐薄-->
        <activity
            android:name=".ui.activity.AddEditBookActivity"
            android:screenOrientation="portrait" />
        <!--消息-->
        <activity
            android:name=".ui.activity.MsgActivity"
            android:screenOrientation="portrait" />
        <!--编辑分类-->
        <activity
            android:name=".ui.activity.TypeEditActivity"
            android:screenOrientation="portrait" />
        <!--添加/编辑分类-->
        <activity
            android:name=".ui.activity.AddEditTypeActivity"
            android:screenOrientation="portrait" />
        <!--统计-->
        <activity
            android:name=".mvp.count.CountActivity"
            android:screenOrientation="portrait" />
        <!--分类收支详情-->
        <activity
            android:name=".mvp.count.TypeCountDetailActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
        <provider
            android:name=".util.MyFileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>